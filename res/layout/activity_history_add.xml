<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.medifile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back3"
            android:orientation="vertical"
            android:padding="10dp" >

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title: "
                android:layout="@layout/custom_float_label"
                android:textColorHint="#444" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/docname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Doctor Name: "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/hospitalname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Hospital Name: "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Location: "
                android:layout="@layout/custom_float_label" />

            <com.example.medifile.Custom_float
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Of Visit: "
                android:textColor="#2929A3"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dateofvisit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Choose Date "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/date1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/date2" />
            </LinearLayout>

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/priscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Prescription:  "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Specification: "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/surgery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="surgery/operation/tests: "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fees: "
                android:inputType="number"
                android:layout="@layout/custom_float_label" />

            <com.example.medifile.Custom_float
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Appointment: "
                android:textColor="#2929A3"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/appointment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Choose Date "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/date2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/date2" />
            </LinearLayout>

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Other Info.: "
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/contact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contact No.: "
                android:inputType="phone"
                android:layout="@layout/custom_float_label" />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/contact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Contact No.: "
                android:inputType="phone"
                android:layout="@layout/custom_float_label" />

           
        </LinearLayout>
    </ScrollView>

</LinearLayout>
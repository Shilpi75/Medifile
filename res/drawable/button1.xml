<?xml version="1.0" encoding="utf-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="false">
    <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <stroke android:color="#944D94"
                android:width="4dp"/>
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
            <solid android:color="#A366A3"/>
        </shape>
</item>
<item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
            <solid android:color="#944D94"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
            <solid android:color="#944D94"/>
        </shape>
    </item>
<item>
    <shape android:shape="rectangle">
        <corners android:radius="30dp"/>
        <solid android:color="#5C005C"/>
         <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        <stroke android:width="4dp" android:color="#000000"/>
    </shape>
</item>
</selector>